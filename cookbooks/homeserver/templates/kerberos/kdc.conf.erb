[realms]
  <%= node['kerberos']['realm'] %> = {
    database_module = openldap_ldapconf
    acl_file = /etc/krb5kdc/kadm5.acl
    key_stash_file = /etc/krb5kdc/stash
    max_life = 10h 0m 0s
    max_renewable_life = 7d 0h 0m 0s
    master_key_type = aes256-cts
    supported_enctypes = aes256-cts:normal camellia256-cts-cmac:normal
    default_principal_flags = +preauth
  }

[dbmodules]
  openldap_ldapconf = {
    db_library = kldap
    ldap_kerberos_container_dn = "cn=kerberos,ou=services,<%= node['ldap']['domain'] %>"
    ldap_kdc_dn = "cn=mit-kdc,cn=kerberos,ou=services,<%= node['ldap']['domain'] %>"
    ldap_kadmind_dn = "cn=mit-kadmind,cn=kerberos,ou=services,<%= node['ldap']['domain'] %>"
    ldap_service_password_file = "/etc/krb5kdc/service.keyfile"
    ldap_servers = "ldap://ldapsrv.<%= node['main']['domain'] %>"
    ldap_conns_per_server = 5
  }