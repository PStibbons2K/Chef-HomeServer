#
# LDAP Defaults
#

# See ldap.conf(5) for details
# This file should be world readable but not world writable.

BASE   <%= node['ldap']['domain'] %>
URI    ldap://ldapsrv.<%= node['main']['domain'] %>

#SIZELIMIT      12
#TIMELIMIT      15
#DEREF          never

# TLS certificates (needed for GnuTLS)
TLS_CACERT      /etc/ssl/certs/cert_ca.<%= node['main']['domain'] %>